<div class="row">
    <div class="col-md-12">
        <h2>Categories
            <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
        </h2>
        <hr />

        {{#if categories.length}}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Category ID</th>
                            <th>Category Name</th>
                            <th></th> <!-- to add remove button -->
                        </tr>
                    </thead>
                    <tbody>
                        {{#each categories}}
                        <tr>
                            {{!-- <td><a href="/items?category={{this.id}}">{{this.id}}</a></td> --}}
                            {{!-- <td><a href="/items?category={{this.id}}">{{this.category}}</a></td> --}}
                            <td>{{this.id}}</td>
                            <td>{{this.category}}</td>
                            <td><a href="/categories/delete/{{this.id}}" class="btn btn-danger">Remove</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
       {{/if}}
    </div>
        {{#unless categories.length}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/unless}}
</div>
