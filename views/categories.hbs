<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <hr />

        {{#if categories.length}}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Category ID</th>
                            <th>Category Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each categories}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.name}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        {{else}}
            <p>No categories available.</p>
        {{/if}}
    </div>
</div>
