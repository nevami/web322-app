<div class="row">
    <div class="col-md-12">
        <h2>Items
            <a href="/items/add" class="btn btn-success pull-right">Add Post</a>
        </h2>
        <hr />
        {{#if items.length}}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Item ID</th>
                            <th>Title</th>
                            <th>Post Date</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Published</th>
                            <th></th> <!-- to add remove button -->
                        </tr>
                    </thead>
                    <tbody>
                        {{#each items}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.title}}</td>
                            <td>{{this.postDate}}</td>
                            <td><a href="/items?category={{this.categoryId}}">{{this.category}}</a></td>
                            <td>${{this.price}}</td>
                            <td>{{#if this.published}}Yes{{else}}No{{/if}}</td>
                            <td><a href="/items/delete/{{this.id}}" class="btn btn-danger">Remove</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        {{/if}}
    </div>
    <!-- Conditionally Display Message If No Items Exist -->
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
</div>

</div>
