<div class="container">
    <div class="row">
        <div class="col-md-12">
            {{#if data.post}}
                <article>
                    <!-- Update: Display the post title -->
                    <h2>{{data.post.title}}</h2>
                    <hr />

                    <!-- Update: Display the feature image -->
                    <img src="{{#if data.post.featureImage}}{{data.post.featureImage}}{{else}}/images/default.png{{/if}}" class="img-fluid" alt="{{data.post.title}}">
                    <br /><br />

                    <!-- Update: Replace lorem ipsum with real content using safeHTML helper -->
                    {{{safeHTML data.post.body}}}
                    <br /><br />

                    <!-- Update: Display post details -->
                    <p><strong>Category:</strong> {{data.post.category}}</p>
                    <p><strong>Price:</strong> ${{data.post.price}}</p>
                    <p><strong>Last Updated:</strong> {{data.post.postDate}}</p>
                </article>
            {{else}}
                <div class="col-md-12 text-center">
                    <h2>{{data.message}}</h2>
                    <p>Please try another Post / Category</p>
                </div>
            {{/if}}
        </div>
    </div>

    <div class="row">
        <!-- Update: Show list of related items -->
        <div class="col-md-6">
            {{#if data.posts.length}}
                <h4>Items</h4>
                <ul class="list-group">
                    {{#each data.posts}}
                        <li class="list-group-item">
                            <a href="/shop/{{this.id}}?category={{../viewingCategory}}">{{this.title}}</a>
                        </li>
                    {{/each}}
                </ul>
            {{/if}}
        </div>

        <!-- Update: Show category links -->
        <div class="col-md-6">
            {{#if data.categories.length}}
                <h4>Categories</h4>
                <ul class="list-group">
                    {{#each data.categories}}
                        <li class="list-group-item">
                            <a href="/shop?category={{this.id}}">{{this.category}}</a>
                        </li>
                    {{/each}}
                </ul>
            {{/if}}
        </div>
    </div>
</div>
